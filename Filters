import numpy as np 
import matplotlib.pyplot as plt 
img = cv2.imread('shinchan.png') 
img = cv2.cvtColor(img, cv2.COLOR_BGR2RGB) 
gauss cv2.Gaussian Blur(img, (5,5), 0) 
median = cv2.medianBlur(img, 5) 
titles=["Original", "Gaussian Blur", "Median Filter"] 
images[img, gauss, median] 
plt.figure(figsize=(12, 4)) 
for i in range(3): 
    plt.subplot(1, 3, i+1) 
    plt.imshow(images[i]) 
    plt.title(titles[i]) 
    plt.axis('off') 
plt.show()
